<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Franja verde con el título -->
    <TextView
        android:id="@+id/travelInfoTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Información del viaje"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:background="#00A898"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Logo debajo del título -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/logo_agreducam"
        app:layout_constraintTop_toBottomOf="@id/travelInfoTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tipo de movimiento -->
    <TextView
        android:id="@+id/movementTypeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="24sp"
        android:textColor="#2C3E50"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/logoImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/movementTypeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo movimiento"
        android:textSize="14sp"
        android:textColor="#7F8C8D"
        app:layout_constraintTop_toBottomOf="@id/movementTypeTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Número de orden -->
    <TextView
        android:id="@+id/orderNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="24sp"
        android:textColor="#2C3E50"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/movementTypeLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/orderNumberLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Número de Orden"
        android:textSize="14sp"
        android:textColor="#7F8C8D"
        app:layout_constraintTop_toBottomOf="@id/orderNumberTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tracto - Remolque -->
    <TextView
        android:id="@+id/tractorTrailerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:textColor="#2C3E50"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/orderNumberLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tractorTrailerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tracto - Remolque"
        android:textSize="14sp"
        android:textColor="#7F8C8D"
        app:layout_constraintTop_toBottomOf="@id/tractorTrailerTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Conductor -->
    <TextView
        android:id="@+id/driverNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:textColor="#2C3E50"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tractorTrailerLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/driverNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conductor"
        android:textSize="14sp"
        android:textColor="#7F8C8D"
        app:layout_constraintTop_toBottomOf="@id/driverNameTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Línea negra divisora -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/driverNameLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón Confirmar -->
    <Button
        android:id="@+id/startTaskButton"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:text="Confirmar inicio"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:backgroundTint="#00A898"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón Cancelar -->
    <Button
        android:id="@+id/cancelButton"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:text="Cancelar"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:backgroundTint="#F39C12"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/startTaskButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/versionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Versión 1.2.8"
        android:textColor="#2C3E50"
        android:textSize="14sp"
        android:gravity="start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/bravoLogo" /> <!-- Alineación con el logo -->

    <ImageView
        android:id="@+id/bravoLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/logo_bravo_erp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
